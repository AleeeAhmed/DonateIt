<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="11dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/idDonorOffers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tvPostNameDonorOffers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Name"
        android:textColor="#000"
        android:textSize="16sp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/tvOfferStatusDonorOffers"
        />

    <TextView
        android:id="@+id/tvOfferAmountDonorOffers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Offered Amount"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/tvPostNameDonorOffers"
        />
    <TextView
        android:id="@+id/tvOfferStatusDonorOffers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OfferStatus"
        android:layout_marginTop="3dp"
        android:layout_alignParentEnd="true"
        />

</RelativeLayout>