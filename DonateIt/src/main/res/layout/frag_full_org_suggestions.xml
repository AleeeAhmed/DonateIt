        android:transformPivotY="0dp" />
-->

    <TextView
        android:id="@+id/itemAmountLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount: "
        android:layout_below="@+id/itemName_OrgSuggestions"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="3dp"
        />
    <TextView
        android:id="@+id/itemAmount_OrgSuggestions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/itemAmountLabel"
        android:layout_below="@+id/itemName_OrgSuggestions"
        android:layout_marginTop="5dp"
        android:layout_alignBaseline="@+id/itemAmountLabel"
        android:text="Item Amount" />
    <TextView
        android:id="@+id/donorNameLabel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemAmount_OrgSuggestions"
        android:layout_marginTop="5dp"
        android:text="Click Invite to request " />
    <TextView
        android:id="@+id/donorName_OrgSuggestions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemAmount_OrgSuggestions"
        android:layout_toEndOf="@+id/donorNameLabel1"
        android:layout_marginTop="5dp"
        android:text="donorName" />

    <TextView
        android:id="@+id/donorNameLabel2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemAmount_OrgSuggestions"
        android:layout_toEndOf="@+id/donorName_OrgSuggestions"
        android:layout_marginTop="5dp"
        android:text=" for this item." />
    <Button
        android:id="@+id/btnInvite_OrgSuggestions"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/button_send_back"
        android:text="Invite"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:textColor="#000"
        />


</RelativeLayout>