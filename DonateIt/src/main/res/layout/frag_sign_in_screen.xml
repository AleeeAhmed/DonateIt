<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_top_bg"
            android:hint="Email"
            android:textColorHint="#cccccc"
            android:drawableStart="@drawable/email"
            android:padding="7dp"
            android:layout_marginStart="11dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="11dp"
            android:inputType="textEmailAddress"
            />
        <EditText
            android:id="@+id/etPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_top_bg"
            android:hint="Password"
            android:textColorHint="#cccccc"
            android:inputType="textPassword"
            android:drawableStart="@drawable/password"
            android:padding="7dp"
            android:layout_marginStart="11dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="11dp"
            android:layout_marginTop="11dp"

            />
        <Button
            android:id="@+id/btnSingIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign In as Donor"
            style="@style/DefaultButtonText"
            android:background="@drawable/button_default_bg"
            android:textAllCaps="false"
            android:layout_marginTop="11dp"
            android:textColor="@color/greenAppColor"
            />
<!--
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:layout_margin="4dp"
            android:textSize="20dp"
            android:layout_gravity="center"/>
-->
<!--        <Button
            android:id="@+id/btnSingInFb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:shadowColor="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimaryDark"
            android:text="Sign In with FB"
            style="@style/DefaultButtonText"
            android:textAllCaps="false"
            android:background="@drawable/button_default_bg"
            />-->

        <Button
            android:id="@+id/btnSingInOrg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Sign In as Org"
            android:textAllCaps="false"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp"
            style="@style/DefaultButtonText"
            android:background="@drawable/button_default_bg"
            />

        <TextView
            android:id="@+id/tvVerifyDonor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verify Donor"
            android:textAlignment="center"
            android:textColor="#000"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tvVerifyOrg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verify Organization"
            android:textAlignment="center"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginTop="7dp"
            />

        <TextView
            android:id="@+id/tvForgotPasswordDonor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forgot Password for Donor?"
            android:textAlignment="center"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginTop="7dp"
            />
        <TextView
            android:id="@+id/tvForgotPasswordOrg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forgot Password for Organization?"
            android:textAlignment="center"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_marginTop="7dp"
            />

    </LinearLayout>


</RelativeLayout>