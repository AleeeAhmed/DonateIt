<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etItem_PostRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_back"
            android:hint="Item Name"
            android:padding="11dp"
            android:textColor="#000"
            />

        <EditText
            android:id="@+id/etQuantity_PostRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="@drawable/edittext_back"
            android:hint="Quantity required"
            android:textColor="#000"
            android:padding="11dp"
            />

        <EditText
            android:id="@+id/etKeywords_PostRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:background="@drawable/edittext_back"
            android:hint="Keywords"
            android:textColor="#000"
            android:padding="11dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="7dp"
            android:textColor="@color/black"
            android:text="Ending Date:"/>

       <DatePicker
           android:id="@+id/timePicker_PostRequest"
           android:layout_width="350dp"
           android:layout_height="100dp"
           android:calendarViewShown="false"
           android:datePickerMode="spinner"
           android:focusableInTouchMode="true">

       </DatePicker>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >


            <Button
                android:id="@+id/btnPost_PostRequest"
                style="@style/DefaultButtonText"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:layout_margin="7dp"
                android:background="@drawable/button_default_bg"
                android:textColor="@color/greenAppColor"
                android:padding="10dp"
                android:text="Post" />

            <Button
                android:id="@+id/btnCancel_PostRequest"
                style="@style/DefaultButtonText"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:layout_margin="7dp"
                android:background="@drawable/button_default_bg"
                android:textColor="@color/greenAppColor"
                android:padding="10dp"
                android:text="Cancel" />

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>