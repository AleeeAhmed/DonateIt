<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <TextView
        android:id="@+id/idDonorRequestsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/titleDonorRequestsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="@color/greenAppColor"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/descDonorRequestsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/titleDonorRequestsList"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:ems="10"
        android:layout_marginTop="3dp"
        android:text="Decription"
        android:maxLines="2"
        />
    <TextView
        android:id="@+id/progressDonorRequestsList"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/targetAmountDonorRequestsList"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        />
    <ProgressBar
        android:id="@+id/pbProgressDonorRequestsList"
        android:layout_width="180dp"
        android:layout_height="11dp"
        android:layout_gravity="center_horizontal"
        android:progressDrawable="@drawable/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/descDonorRequestsList"
        />


    <ImageView
        android:id="@+id/savedDonorRequestsList"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/emptyheart"
        android:contentDescription="@string/app_name"
        android:layout_below="@+id/descDonorRequestsList"
        android:layout_alignParentEnd="true"
        />

</RelativeLayout>