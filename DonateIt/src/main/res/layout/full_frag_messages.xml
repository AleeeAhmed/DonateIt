<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp">

    <TextView
        android:id="@+id/idMessagesDonorList"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:visibility="gone"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageMessagesDonorList"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/logo"
        app:civ_border_color="#000"
        app:civ_border_width="1dp"
        android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/orgNameMessagesDonorList"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginBottom="2dp"
            android:textSize="20sp"
            android:text="org name"
            android:textColor="@color/black"
            android:layout_marginStart="7dp"
            android:layout_toEndOf="@+id/imageMessagesDonorList"
            />

        <TextView
            android:id="@+id/postMessagesDonorList"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginBottom="2dp"
            android:textSize="18sp"
            android:text="post"
            android:textColor="@color/littleDarkBlack"
            android:layout_marginStart="7dp"
            android:layout_toEndOf="@+id/imageMessagesDonorList"
            android:layout_below="@+id/orgNameMessagesDonorList"
            />

        <TextView
            android:id="@+id/lastMessagesDonorList"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="2dp"
            android:textSize="15sp"
            android:text="last message"
            android:textColor="@color/littleLightBlack"
            android:layout_marginStart="7dp"
            android:layout_toEndOf="@+id/imageMessagesDonorList"
            android:layout_below="@+id/postMessagesDonorList"
            />
</RelativeLayout>